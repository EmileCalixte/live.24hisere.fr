{
    "name": "@live24hisere/backend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "create-user": "node dist/src/cli.js create-user",
        "update-password": "node dist/src/cli.js update-user-password",
        "drizzle-kit": "drizzle-kit",
        "createmigration": "drizzle-kit generate --name",
        "migrate": "node dist/src/cli.js migrate",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "dev": "pnpm start:dev",
        "start": "nest start",
        "start:dev": "pnpm nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:cov": "vitest run --coverage",
        "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
        "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
    },
    "dependencies": {
        "@nestjs/axios": "^3.0.3",
        "@nestjs/common": "^10.4.4",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.4.4",
        "@nestjs/mapped-types": "^2.0.5",
        "@nestjs/platform-express": "^10.4.4",
        "@nestjs/schedule": "^4.1.1",
        "argon2": "^0.41.1",
        "axios": "^1.7.7",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cron": "^3.1.7",
        "drizzle-orm": "^0.34.0",
        "mysql2": "^3.11.3",
        "nest-commander": "^3.15.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.2.0",
        "type-fest": "^4.26.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.5",
        "@nestjs/schematics": "^10.1.4",
        "@nestjs/testing": "^10.4.4",
        "@swc/core": "^1.7.26",
        "@types/express": "^4.17.21",
        "@types/node": "20.16.5",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "^2.1.2",
        "drizzle-kit": "^0.25.0",
        "jest-extended": "^4.0.2",
        "prettier": "^3.3.3",
        "source-map-support": "^0.5.20",
        "supertest": "^7.0.0",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.6.2",
        "unplugin-swc": "^1.5.1",
        "vitest": "^2.1.3"
    }
}
