{
  "name": "@live24hisere/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "create-user": "node dist/src/cli.js create-user",
    "update-password": "node dist/src/cli.js update-user-password",
    "drizzle-kit": "drizzle-kit",
    "createmigration": "drizzle-kit generate --name",
    "migrate": "node dist/src/cli.js migrate",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "pnpm start:dev",
    "start": "nest start",
    "start:dev": "pnpm nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc --noEmit",
    "test": "exit 0",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
  },
  "dependencies": {
    "@live24hisere/core": "workspace:^",
    "@live24hisere/utils": "workspace:^",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.9",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.8",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.9",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.0.3",
    "argon2": "^0.41.1",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cron": "^3.5.0",
    "drizzle-orm": "^0.39.2",
    "mysql2": "^3.12.0",
    "nest-commander": "^3.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.7",
    "@swc/core": "^1.10.15",
    "@types/express": "^5.0.0",
    "@types/node": "22.10.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.4",
    "drizzle-kit": "^0.30.4",
    "jest-extended": "^4.0.2",
    "prettier": "^3.5.0",
    "source-map-support": "^0.5.20",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.4"
  }
}
