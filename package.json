{
  "name": "live24hisere",
  "version": "0.1.0",
  "description": "",
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "backend": "pnpm --filter @live24hisere/backend",
    "frontend": "pnpm --filter @live24hisere/frontend",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test --parallel",
    "build": "turbo run build",
    "format": "prettier \"{apps,packages}/**/*.{js,ts,jsx,tsx,css,json}\" --write",
    "lint-path": "eslint --max-warnings=0 --no-warn-ignored",
    "lint": "pnpm lint-path .",
    "lint-fix": "pnpm lint --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0 --no-warn-ignored"
    ],
    "*.css": "prettier --write"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "eslint": "^9.17.0",
    "eslint-config-love": "114.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.3.0"
}
