{
  "name": "live24hisere",
  "version": "0.1.0",
  "description": "",
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "backend": "pnpm --filter @live24hisere/backend",
    "frontend": "pnpm --filter @live24hisere/frontend",
    "core": "pnpm --filter @live24hisere/core",
    "utils": "pnpm --filter @live24hisere/utils",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test --parallel",
    "build": "pnpm export-licenses && turbo run build",
    "format-base": "prettier \"{apps,packages}/**/*.{js,ts,jsx,tsx,css,json}\"",
    "format": "pnpm format-base --write",
    "format-check": "pnpm format-base --check",
    "lint-path": "eslint --max-warnings=0 --no-warn-ignored",
    "lint": "pnpm lint-path .",
    "lint-fix": "pnpm lint --fix",
    "export-licenses": "pnpm licenses ls --json > apps/frontend/src/assets/licenses.json",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0 --no-warn-ignored"
    ],
    "*.{css,json}": "prettier --write"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/eslint-config-prettier": "^6.11.3",
    "eslint": "^10.0.2",
    "eslint-config-love": "151.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
